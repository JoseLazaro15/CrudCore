@model List<ContactoModel>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista Contacto
    </div>

    <div class="card-body">
      <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
      <hr/>

      <table class="table table-bordered">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                <td>@item.Nombre</td>
                <td>@item.Telefono</td>
                <td>@item.Correo</td>
                <td>
                    <a asp-action="Editar" asp-controller="Mantenedor" asp-route-IdContacto="@item.IdContacto" class="btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i> Editar</a>
                    <a asp-action="Eliminar" asp-controller="Mantenedor" asp-route-IdContacto="@item.IdContacto" class="btn btn-danger btn-sm"><i class="bi bi-person-dash"></i> Eliminar</a>
                </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
